                  <TableColumn fx:id="thang12Col" prefWidth="75.0" text="T12" />
              </columns>
            </TableView>

            <!-- VEHICLE COUNT TABLE -->
            <AnchorPane layoutX="25.0" layoutY="370.0" prefHeight="280.0" prefWidth="600.0" styleClass="form">
               <children>
                  <Label alignment="CENTER" layoutY="10.0" prefHeight="30.0" prefWidth="600.0" text="Số lượng phương tiện mỗi hộ" textAlignment="CENTER">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  <TableView fx:id="vehicleTableView" layoutX="10.0" layoutY="50.0" prefHeight="220.0" prefWidth="580.0" styleClass="table">
                    <columns>
                      <TableColumn fx:id="maHoKhauCol1" prefWidth="150.0" text="Mã căn hộ" />
                      <TableColumn fx:id="soXeMayCol" prefWidth="140.0" text="Số xe máy" />
                        <TableColumn fx:id="soOToCol" prefWidth="140.0" text="Số ô tô" />
                        <TableColumn fx:id="soXeDapCol" prefWidth="140.0" text="Số xe đạp" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>
            
            <!-- CURRENT PRICES INFO -->
            <AnchorPane layoutX="640.0" layoutY="370.0" prefHeight="280.0" prefWidth="535.0" styleClass="form">
               <children>
                  <Label alignment="CENTER" layoutY="10.0" prefHeight="30.0" prefWidth="535.0" text="Đơn giá hiện tại (VNĐ/xe/tháng)" textAlignment="CENTER">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  
                  <HBox layoutX="20.0" layoutY="80.0" prefHeight="150.0" prefWidth="495.0" style="-fx-border-color: black; -fx-border-width: 1px;">
                      <children>
                          <VBox alignment="CENTER" prefHeight="150.0" prefWidth="165.0" style="-fx-border-color: black; -fx-border-width: 0 1 0 0;">
                              <children>
                                  <Label text="Xe Máy" textFill="#2c3e50">
                                      <font><Font name="Arial Bold" size="20.0" /></font>
                                  </Label>
                                  <Label fx:id="giaXeMayLabel" text="70000" textFill="#e74c3c">
                                      <font><Font name="Arial" size="18.0" /></font>
                                  </Label>
                              </children>
                          </VBox>
                          <VBox alignment="CENTER" prefHeight="150.0" prefWidth="165.0" style="-fx-border-color: black; -fx-border-width: 0 1 0 0;">
                              <children>
                                  <Label text="Ô Tô" textFill="#2c3e50">
                                      <font><Font name="Arial Bold" size="20.0" /></font>
                                  </Label>
                                  <Label fx:id="giaOToLabel" text="1200000" textFill="#e74c3c">
                                      <font><Font name="Arial" size="18.0" /></font>
                                  </Label>
                              </children>
                          </VBox>
                           <VBox alignment="CENTER" prefHeight="150.0" prefWidth="165.0">
                              <children>
                                  <Label text="Xe Đạp" textFill="#2c3e50">
                                      <font><Font name="Arial Bold" size="20.0" /></font>
                                  </Label>
                                  <Label fx:id="giaXeDapLabel" text="5000" textFill="#e74c3c">
                                      <font><Font name="Arial" size="18.0" /></font>
                                  </Label>
                              </children>
                          </VBox>
                      </children>
                  </HBox>
               </children>
            </AnchorPane>
            
            <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="252.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/search_icon.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
