                  <TableColumn fx:id="thang5Col" prefWidth="75.0" text="T5" />
                  <TableColumn fx:id="thang6Col" prefWidth="75.0" text="T6" />
                  <TableColumn fx:id="thang7Col" prefWidth="75.0" text="T7" />
                  <TableColumn fx:id="thang8Col" prefWidth="75.0" text="T8" />
                  <TableColumn fx:id="thang9Col" prefWidth="75.0" text="T9" />
                  <TableColumn fx:id="thang10Col" prefWidth="75.0" text="T10" />
