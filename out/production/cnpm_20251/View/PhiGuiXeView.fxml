<AnchorPane id="AnchorPane" prefHeight="773.5" prefWidth="1214.0" stylesheets="@../css/page2.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PhiGuiXeController">
   <children>
      <AnchorPane layoutX="7.0" layoutY="10.0" prefHeight="80.0" prefWidth="1200.0" styleClass="background">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="500.0" layoutY="15.0" prefHeight="50.0" prefWidth="200.0" text="Phí gửi xe">
               <font>
                  <Font name="Arial Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutY="102.0" prefHeight="670.0" prefWidth="1200.0" styleClass="background">
         <children>
            <Label layoutX="113.0" layoutY="12.0" text="Tìm kiếm:">
               <font>
                  <Font name="Arial" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="searchbar" layoutX="285.0" layoutY="12.0" prefHeight="26.0" prefWidth="616.0" promptText="Search..." />
            
             <ComboBox fx:id="yearCBox" layoutX="920.0" layoutY="12.0" onAction="#selectYearOnAction" prefWidth="100.0" promptText="Năm" styleClass="comboBox" />
             
             <!-- ACTION BUTTONS -->
             <Button alignment="CENTER" contentDisplay="CENTER" layoutX="1030.0" layoutY="10.0" mnemonicParsing="false" onAction="#openUpdateVehicleOnAction" prefHeight="30.0" prefWidth="160.0" styleClass="button-add" text="Cập nhật xe" textAlignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            
            <Button alignment="CENTER" contentDisplay="CENTER" layoutX="1030.0" layoutY="50.0" mnemonicParsing="false" onAction="#openUpdateFeeOnAction" prefHeight="30.0" prefWidth="160.0" styleClass="button-add" text="Cập nhật giá" textAlignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>

            <!-- MAIN FEE TABLE -->
            <TableView fx:id="feeTableView" layoutX="25.0" layoutY="90.0" prefHeight="270.0" prefWidth="1150.0" styleClass="table">
              <columns>
                <TableColumn fx:id="maHoKhauCol" prefWidth="100.0" text="Mã hộ khẩu" />
                <TableColumn fx:id="phiMoiThangCol" prefWidth="150.0" text="Phí tháng (VNĐ)" />
