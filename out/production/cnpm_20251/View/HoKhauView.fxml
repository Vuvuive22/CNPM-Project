<AnchorPane prefHeight="773.0" prefWidth="1204.0" style="-fx-background-color: white;" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HoKhauController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="733.0" prefWidth="1164.0" spacing="20.0">
         <children>
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1164.0" spacing="20.0">
               <children>
                  <Label text="Quản lý hộ khẩu" textFill="#102a43">
                     <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="10.0">
                     <children>
                        <Label text="Tìm kiếm:">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="searchbar" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #BDBDBD;" />
                        <Button mnemonicParsing="false" onAction="#addHoKhauOnAction" style="-fx-background-color: #2D9CDB; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="+ Thêm hộ khẩu">
                           <font>
                              <Font name="Segoe UI Bold" size="14.0" />
                           </font>
                           <padding>
                              <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                           </padding>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>

            <!-- Table Section -->
            <TableView fx:id="householdTableView" prefHeight="650.0" prefWidth="1164.0" styleClass="table-light" stylesheets="@../css/home.css">
              <columns>
                <TableColumn fx:id="maHKCol" minWidth="100.0" prefWidth="150.0" text="Mã căn hộ" />
                <TableColumn fx:id="maToaNhaCol" prefWidth="150.0" text="Tòa nhà" />
                <TableColumn fx:id="dienTichCol" prefWidth="150.0" text="Diện tích (m2)" />
                <TableColumn fx:id="chuHoCol" prefWidth="250.0" text="Chủ hộ" />
                <TableColumn fx:id="ngayLapCol" prefWidth="200.0" text="Ngày lập" />
                <TableColumn fx:id="thaoTacCol" prefWidth="150.0" text="Thao tác" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
