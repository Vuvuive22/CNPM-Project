<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddToaNhaController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="360.0" prefWidth="460.0" spacing="15.0">
         <children>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="460.0" text="Thêm tòa nhà mới" textFill="#102a43">
               <font>
                  <Font name="Segoe UI Bold" size="24.0" />
               </font>
            </Label>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Mã tòa nhà (ID)">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="maToaNhaTF" promptText="Nhập ID (ví dụ: T01)" style="-fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Tên tòa nhà">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tenToaNhaTF" promptText="Nhập tên tòa nhà" style="-fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Mô tả">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="moTaTA" prefHeight="100.0" prefWidth="460.0" promptText="Nhập mô tả chi tiết..." style="-fx-border-color: #BDBDBD; -fx-border-radius: 5; -fx-background-radius: 5;" wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </VBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#cancel" style="-fx-background-color: #E0E0E0; -fx-cursor: hand;" text="Hủy">
                     <font>
                        <Font name="Segoe UI" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                     </padding>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#save" style="-fx-background-color: #2D9CDB; -fx-text-fill: white; -fx-cursor: hand;" text="Lưu">
                     <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
