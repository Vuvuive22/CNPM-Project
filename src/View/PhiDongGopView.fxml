                     </columns>
                  </TableView>
                  <Button alignment="CENTER" contentDisplay="CENTER" layoutX="140.0" layoutY="546.0" mnemonicParsing="false" onAction="#deleteFeeOnAction" prefHeight="30.0" prefWidth="200.0" text="Xóa khoản phí" textAlignment="CENTER">
                     <font>
                        <Font name="Arial" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </AnchorPane>
            
            <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="254.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/search_icon.png" />
               </image>
            </ImageView>
            
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
