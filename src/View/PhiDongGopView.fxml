<AnchorPane id="AnchorPane" prefHeight="773.5" prefWidth="1214.0" stylesheets="@../css/page2.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PhiDongGopController">
   <children>
      <AnchorPane layoutX="7.0" layoutY="10.0" prefHeight="80.0" prefWidth="1200.0" styleClass="background">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutY="15.0" prefHeight="50.0" prefWidth="1200.0" text="Phí đóng góp tự nguyện">
               <font>
                  <Font name="Arial Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="7.0" layoutY="102.0" prefHeight="670.0" prefWidth="1200.0" styleClass="background">
         <children>
            <Label layoutX="113.0" layoutY="12.0" text="Tìm kiếm:">
               <font>
                  <Font name="Arial" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="searchbar" layoutX="285.0" layoutY="12.0" prefHeight="26.0" prefWidth="616.0" promptText="Search..." />
            
            <!-- BUTTON HEADER -->
            <Button alignment="CENTER" contentDisplay="CENTER" layoutX="1010.0" layoutY="10.0" mnemonicParsing="false" onAction="#addFeeOnAction" prefHeight="30.0" prefWidth="180.0" styleClass="button-add" text="+ Thêm khoản phí" textAlignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>

            <!-- LEFT TABLE: Fee Payment History -->
            <AnchorPane layoutX="25.0" layoutY="60.0" prefHeight="590.0" prefWidth="650.0" styleClass="form">
               <children>
                  <Label alignment="CENTER" layoutY="12.0" prefHeight="30.0" prefWidth="650.0" text="Lịch sử đóng góp" textAlignment="CENTER">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  <TableView fx:id="feeTableView" layoutX="10.0" layoutY="54.0" prefHeight="520.0" prefWidth="630.0" styleClass="table">
                    <columns>
                      <TableColumn fx:id="maHoKhauCol" prefWidth="150.0" text="Mã căn hộ" />
                      <TableColumn fx:id="tenPhiCol" prefWidth="160.0" text="Tên phí" />
                        <TableColumn fx:id="soTienCol" prefWidth="160.0" text="Số tiền (VNĐ)" />
                        <TableColumn fx:id="ngayDongGopCol" prefWidth="160.0" text="Ngày đóng góp" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>

            <!-- RIGHT TABLE: Configured Fee Types -->
            <AnchorPane layoutX="695.0" layoutY="60.0" prefHeight="590.0" prefWidth="480.0" styleClass="form">
               <children>
                  <Label alignment="CENTER" layoutY="12.0" prefHeight="30.0" prefWidth="480.0" text="Danh sách các khoản phí" textAlignment="CENTER">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  <TableView fx:id="listFeeTableView" layoutX="10.0" layoutY="54.0" prefHeight="480.0" prefWidth="460.0" styleClass="table">
                     <columns>
                        <TableColumn fx:id="tenPhi1Col" prefWidth="200.0" text="Tên Phí" />
