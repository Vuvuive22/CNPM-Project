<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" stylesheets="@../css/home.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.VehicleDetailController">
   <children>
      <Label fx:id="titleLabel" layoutX="20.0" layoutY="20.0" text="Chi tiết phương tiện" textFill="#102a43">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      
      <TableView fx:id="vehicleTableView" layoutX="20.0" layoutY="60.0" prefHeight="280.0" prefWidth="560.0" styleClass="table-light">
        <columns>
          <TableColumn fx:id="loaiXeCol" prefWidth="150.0" text="Loại xe" />
          <TableColumn fx:id="bienSoCol" prefWidth="150.0" text="Biển số" />
            <TableColumn fx:id="chuXeCol" prefWidth="258.0" text="Chủ xe" />
        </columns>
      </TableView>
      
      <Button layoutX="140.0" layoutY="350.0" mnemonicParsing="false" onAction="#deleteVehicleOnAction" prefHeight="30.0" prefWidth="100.0" styleClass="button-delete" text="Xóa" />
      
      <Button layoutX="360.0" layoutY="350.0" mnemonicParsing="false" onAction="#closeOnAction" prefHeight="30.0" prefWidth="100.0" styleClass="button-cancel" text="Đóng" />
   </children>
</AnchorPane>
